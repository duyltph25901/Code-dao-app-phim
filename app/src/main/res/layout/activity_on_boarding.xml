<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities_viewer.OnBoardingActivity"
    android:background="#040305">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutOnBoarding"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="70dp"
        android:background="@drawable/bg_view_pager_on_boarding">

        <me.relex.circleindicator.CircleIndicator3
            android:layout_width="100dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/circleIndicatorOnBoarding"
            app:ci_drawable="@drawable/bg_indicator_on_boarding"/>
        <TextView
            android:id="@+id/txtSkipOnBoarding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/circleIndicatorOnBoarding"
            app:layout_constraintBottom_toBottomOf="@id/circleIndicatorOnBoarding"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/circleIndicatorOnBoarding"
            app:layout_constraintEnd_toEndOf="@id/txtSkipOnBoarding"
            app:layout_constraintTop_toBottomOf="@id/txtSkipOnBoarding"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/layoutContentBoarding"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageButton
        android:id="@+id/btnNextOnBoarding"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutOnBoarding"
        app:layout_constraintBottom_toBottomOf="@id/layoutOnBoarding"
        android:src="@drawable/ic_next"
        app:tint="@color/white"
        android:background="@drawable/bg_btn_next"/>
    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Get started"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/bg_btn_login"
        app:layout_constraintTop_toBottomOf="@id/btnNextOnBoarding"
        app:layout_constraintStart_toStartOf="@id/btnNextOnBoarding"
        app:layout_constraintEnd_toEndOf="@id/btnNextOnBoarding"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>