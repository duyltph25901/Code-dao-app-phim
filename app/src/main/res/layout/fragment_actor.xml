<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_ad.ActorFragment"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actor management"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/layoutTitle"
            app:layout_constraintEnd_toEndOf="@id/layoutTitle"
            app:layout_constraintTop_toBottomOf="@id/layoutTitle"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/imgActor"
                android:layout_marginEnd="20dp"/>
            <Button
                android:id="@+id/btnChooseImageActor"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:text="Choose image"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/bg_btn_ad"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@id/layoutImage"
            app:layout_constraintEnd_toEndOf="@id/layoutImage"
            app:layout_constraintTop_toBottomOf="@id/layoutImage"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full name *"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bg_input_login_sign_up"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/inputFullNameActor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Full name"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:inputType="text"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of birth *"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bg_input_login_sign_up"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/txtDOBActor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="dd/MM/yyyy"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Countries"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bg_input_login_sign_up"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <Spinner
                    android:id="@+id/spnCountriesActor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:backgroundTint="@color/white"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sex"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bg_input_login_sign_up"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <Spinner
                    android:id="@+id/spnSexActor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:backgroundTint="@color/white"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Story *"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bg_input_login_sign_up"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/inputStoryActor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Story"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:inputType="text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <Button
                    android:id="@+id/btnClearActor"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:text="Clear"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_btn_ad"/>
                <Button
                    android:id="@+id/btnAddActor"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_btn_ad"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>